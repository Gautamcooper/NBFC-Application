
@{
    ViewBag.Title = "Homepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#exampleModal').modal('show');
    });
    $("#modal_close").click(function () {
        $('#exampleModal').modal('hide');
    });
</script>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1" style="margin-left: 10px;"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2" style="margin-left: 10px;"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Carousel_Pic1.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Carousel_Pic2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Carousel_Pic3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div><br />

@if (@ViewBag.Step1Count == null)
{
    <div class="pending">
        <div>
            <p>Instant Loans at your Fingertips</p>
            <div><a style="color:red;" href="~/personal.aspx">Apply for Loan!</a></div>
        </div>
    </div>
}

@if (@ViewBag.Step1Count > 0)
{
    <div class="pending">
        <div>
            <p>You have incomplete application for @ViewBag.Step1Count.ToString() Loan</p>
            <div><a style="color:red;" href="~/Home/PendingSteps">Click Here! </a></div>
        </div>  
    </div>
    <div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="overflow: hidden;">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="modal-title" id="exampleModalLabel" style="font-size: 20px; color: #4a89dc;">Notification</p>
                    <button type="button" class="close" id="modal_close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="font-size: 15px;">
                    You have incomplete application for @ViewBag.Step1Count.ToString() Loan
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary defaultButton" data-dismiss="modal">Close</button>
                    <input type="button" class="btn btn-primary defaultButton" onclick="location.href='../Home/PendingSteps'" value="Check" />
                </div>
            </div>
        </div>
    </div>

}

