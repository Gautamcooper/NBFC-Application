@using NBFC_App___dev.Models;
@{
    ViewBag.Title = "FAQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="faq-main">
        <img src="~/FAQ.jpg" />
    </div>
    <br />
    <br />
    <div class="container faq_division">
        <div class="faq-title">
            <h2>FAQ</h2>
        </div>
        @foreach (var faq in (IEnumerable<FAQ>)ViewData["miscFAQ"])
        {
            <details>
                <summary class="faqsummary">@faq.question</summary>
                <p class="faqanswer">@faq.answer</p>
            </details>
        }
    </div>

</div>
