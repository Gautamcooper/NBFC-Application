@using NBFC_App___dev.Models;

    @{
        ViewBag.Title = "PendingSteps";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="container">
        <div style="position: relative;">
            <h2 style="text-align: center;">My Pending Steps</h2>
        </div>
        <br />
        <div class="container-fluid table_view">
            <table class="table">
                <thead>
                    <tr style="background: powderblue;">
                        <th scope="col">Loan</th>
                        <th scope="col">LoanType</th>
                        <th scope="col">Tenure</th>
                        <th scope="col">Loan Amount</th>
                        <th scope="col">Date</th>
                        <th scope="col">       </th>
                        <th scope="col">      </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ps in (IEnumerable<PendingSteps>)ViewData["PendingSteps"])
                    {
                    <tr class="table_row">
                        <td>@ps.loanname</td>
                        <td>@ps.loantype</td>
                        <td>@ps.loanterm</td>
                        <td>@ps.loanamount</td>
                        <td>@ps.date</td>
                        <td>@Html.ActionLink(@ps.proceed, "UpdateAppGateIdOfPendingStep", new { Id = @ps.step1id })</td>
                        <td>@Html.ActionLink(@ps.cancel, "CancelPendingStep", new { Id = @ps.step1id })</td>
                        <td>@Html.ActionLink(@ps.edit, "EditPendingStep", new { Id = @ps.step1id })</td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card_view container-fluid">
            @foreach (var ps in (IEnumerable<PendingSteps>)ViewData["PendingSteps"])
            {
                <div class="card card_detail">
                    <div class="card-header"><h3>@ps.loanname</h3></div><br />
                    <div class="card-body">
                        <h4 class="card-title"><b>Status: </b>@ps.loantype</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="card-text"><b>Tenure: </b>@ps.loanterm</p>
                            </div>
                            <div class="col-md-6">
                                <p class="card-text"><b>Start Date: </b>@ps.loanamount</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

